def media (num1 : float, num2 : float, num3: float) -> float:
    soma = [num1, num2, num3]
    resultado = sum(soma) / len(soma)
    return resultado



num1 = float(input('Digite o número 1: '))
num2 = float(input('Digite o número 2: '))
num3 = float(input('Digite o número 3: '))

print(f'A média é {media(num1, num2, num3):.2f}')

